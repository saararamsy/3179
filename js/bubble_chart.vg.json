{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "padding": {"left": 70, "top": 10, "right": 10, "bottom": 30},
    
    "title": "YouTube Stats Bubble Chart (2023)",
    "data": {
      "url": "https://raw.githubusercontent.com/saararamsy/3179/main/Cleaned_Global_YouTube_Statistic_2023.csv"
    },
    "params": [
      {
        "name": "categorySelect",
        "bind": {
          "input": "select",
          "options": [
            null,
            "Music",
            "Entertainment",
            "Education",
            "Shows",
            "People & Blogs"
          ],
          "labels": [
            "Show All",
            "Music",
            "Entertainment",
            "Education",
            "Shows",
            "People & Blogs"
          ],
          "name": "Category Selection: "
        }
      },
      {
        "name": "earningsFilter",
        "bind": {
          "input": "range",
          "min": 10000,
          "max": 25000000,
          "step": 1000,
          "name": " Highest Yearly Earnings "
        }
      }
    ],
    "transform": [
      {
        "filter": "categorySelect == null || datum.category == categorySelect"
      },
      {
        "filter": "datum.category == 'Music' || datum.category == 'Entertainment' || datum.category == 'Education' || datum.category == 'Shows' || datum.category == 'People & Blogs'"
      },
      {
        "filter": "datum.highest_yearly_earnings >= earningsFilter"
      }
    ],
    "encoding": {
      "x": {
        "field": "video views",
        "type": "quantitative",
        "title": "Video Views",
        //"axis": {"format": ".2s"}
      },
      "y": {
        "field": "subscribers",
        "type": "quantitative",
        "title": "Subscribers",
          "axis": {
          "labelAngle": 0,
          "tickCount": 10,
          "format": ".2s"
        }
      },
      "size": {
        "field": "highest_yearly_earnings",
        "type": "quantitative",
        "title": "Highest Yearly Earnings"
      },
      "color": {
        "field": "category",
        "type": "nominal",
        "title": "Category",
        "legend": {
          "title": "Category"
        }
      },
      "tooltip": [
        {
          "field": "Youtuber",
          "type": "nominal",
          "title": "YouTuber"
        },
        {
          "field": "Country",
          "type": "nominal",
          "title": "Country"
        },
        {
          "field": "video views",
          "type": "quantitative",
          "title": "Video Views",
          "format": ","
          
        },
        {
          "field": "subscribers",
          "type": "quantitative",
          "title": "Subscribers",
          "format": ".2s"
       
        },
        {
          "field": "highest_yearly_earnings",
          "type": "quantitative",
          "title": "Highest Yearly Earnings",
          "format": ".2s"
       
        }
      ]
    },
    "mark": "circle"
  }
  